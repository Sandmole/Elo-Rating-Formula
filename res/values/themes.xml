<?xml version="1.0" encoding="utf-8"?>
<resources 
    xmlns:android="http://schemas.android.com/apk/res/android">
    
    <style parent="android:style/Widget.Button" name="buttonTheme">
        <item name="android:background">@drawable/button_selector</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#ffff00</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:minWidth">40dp</item>
    </style>
    
    <style parent="android:style/Theme.Holo.Dialog" name="dialogTheme">
        <item name="android:textColor">#000000</item>
    </style>
    
    <style parent="android:Theme.Holo.Light" name="settingsTheme">
        <item name="android:background">@drawable/list_background</item>
        <item name="android:listSelector">@drawable/list_selector</item>
    </style>
    
    <style parent="android:Theme.Holo.Light" name="appTheme">
        <item name="android:windowBackground">@drawable/red_space_theme</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:buttonStyle">@style/buttonTheme</item>
        <item name="android:alertDialogStyle">@style/dialogTheme</item>
    </style>
</resources>
